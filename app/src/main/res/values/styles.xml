<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textViewStyle">@style/VerticallyCenteredTextView</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="VerticallyCenteredTextView" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="VerticallyCenteredTextView.Primary">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="VerticallyCenteredTextView.Primary.Accent">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="VerticallyCenteredTextView.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSecondary</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="VerticallyCenteredTextView.MedicationCard" />

    <style name="VerticallyCenteredTextView.MedicationCard.Primary">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="VerticallyCenteredTextView.MedicationCard.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="VerticallyCenteredTextView.ReminderCard" />

    <style name="VerticallyCenteredTextView.ReminderCard.Primary">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="VerticallyCenteredTextView.ReminderCard.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSecondary</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="VerticallyCenteredTextView.ReminderCard.Time">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:typeface">monospace</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/cardview_light_background</item>
    </style>

    <style name="VerticallyCenteredTextView.ReminderCard.Primary.Note">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="VerticallyCenteredTextView.ReminderCard.Time.Note">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/cardview_dark_background</item>
    </style>

    <style name="Button" parent="android:Widget.Material.Button.Borderless.Colored" />

    <style name="Button.Raised" parent="android:Widget.DeviceDefault.Button">
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Button.Raised.Primary">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="Button.Raised.Secondary">
        <item name="android:background">@color/primary_light</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">@android:color/white</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
    </style>

    <style name="FloatingActionButton.AddButton">
        <item name="srcCompat">@drawable/ic_add</item>
    </style>

    <style name="FloatingActionButton.SaveButton">
        <item name="srcCompat">@drawable/ic_save</item>
        <item name="backgroundTint">@color/save_button</item>
    </style>

    <style name="FloatingActionButton.DeleteButton">
        <item name="srcCompat">@drawable/ic_delete</item>
        <item name="android:tint">?android:attr/colorAccent</item>
        <item name="backgroundTint">@color/delete_button</item>
    </style>

    <style name="ImageView">
        <item name="android:tint">?android:attr/colorPrimaryDark</item>
    </style>

    <style name="ImageView.CheckMark">
        <item name="android:tint">@color/primary</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/navigation_item</item>
        <item name="itemTextColor">@color/navigation_item</item>
    </style>

</resources>
