<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_key_treatment_enabled"
        android:summary="@string/pref_description_treatment_support"
        android:title="@string/pref_title_treatment_switch" />

    <PreferenceCategory
        android:dependency="@string/pref_key_treatment_enabled"
        android:title="@string/prefcat_title_treatment_first_cycle">

        <name.leesah.nirvana.ui.tweaks.DatePreference
            android:dependency="@string/pref_key_treatment_enabled"
            android:key="@string/pref_key_treatment_first_day"
            android:title="@string/pref_title_treatment_first_day" />

        <name.leesah.nirvana.ui.tweaks.PeriodPreference
            android:dependency="@string/pref_key_treatment_enabled"
            android:key="@string/pref_key_treatment_cycle_length"
            android:title="@string/pref_title_treatment_cycle_length" />

    </PreferenceCategory>

    <PreferenceCategory
        android:dependency="@string/pref_key_treatment_enabled"
        android:title="@string/prefcat_title_treatment_repeating_model">

        <ListPreference
            android:dependency="@string/pref_key_treatment_enabled"
            android:key="@string/pref_key_treatment_repeating_model"
            android:summary="%s"
            android:title="@string/pref_title_treatment_repeating_model" />

    </PreferenceCategory>

</PreferenceScreen>