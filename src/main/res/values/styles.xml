<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textViewStyle">@style/VerticallyCentered</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>

        <item name="android:editTextStyle">@style/editTextStyle</item>
        <item name="android:checkboxStyle">@style/checkboxStyle</item>
    </style>

    <style name="VerticallyCentered" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:paddingLeft">@dimen/widget_padding_left</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:paddingLeft">@dimen/widget_padding_left</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="editTextStyle" parent="android:Widget.DeviceDefault.EditText">
        <item name="android:paddingLeft">@dimen/widget_padding_left</item>
    </style>

    <style name="checkboxStyle" parent="android:Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:paddingLeft">@dimen/widget_padding_left</item>
    </style>

    <style name="VerticallyCentered.Primary">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="VerticallyCentered.Secondary">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
