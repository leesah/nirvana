<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="name.leesah.nirvana">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="name.leesah.nirvana.ui.MainActivity" />
        </activity>

        <activity
            android:name=".ui.medication.MedicationEditActivity"
            android:label="@string/title_activity_edit_medication"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="name.leesah.nirvana.ui.MainActivity" />
        </activity>

        <activity android:name=".ui.reminder.ReminderDetailsActivity" />

        <service
            android:name=".ui.reminder.SchedulingService"
            android:exported="false" />
        <service
            android:name=".ui.reminder.RemindingService"
            android:exported="false" />

        <receiver
            android:name=".ui.reminder.SchedulingService$BootCompletedReceiver"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="true" />

    </application>

</manifest>